pipeline {
    agent none 
    stages {
        stage('back-end') {
            agent {
                docker {'image "maven:3.8.1-adoptopenjdk-11'}
            }
            steps {
                sh 'mvn --version'
            }
            steps {
                sh 'java --version'
            }
         }
         stage('front-end') {
            agent {
                docker {image 'node:16-alpine'}
            }
            steps {
                sh 'node --version'
            }
         }
    }
}
      
